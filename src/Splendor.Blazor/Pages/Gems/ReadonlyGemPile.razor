<span class="relative">
    <img class="" src="img/gems/piled-gems/@($"{Gem.PilePath(Number).Path}.png")" />
    <span class="absolute bottom-0 right-0 px-2 py-0 mx-0 rounded-sm
       text-black bg-gray-800 bg-opacity-30 rounded-full font-mono font-bold">
        @Number
    </span>
</span>

@code {
    [Parameter]
    public Gem Gem { get; set; }

    [Parameter]
    public int Number { get; set; }

}
