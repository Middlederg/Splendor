@implements ISelectableDevelopment

<button class="m-1 p-1 outline-none focus:outline-none @(Selected ? "bg-indigo-500" : "hover:bg-indigo-200")" @onclick="Click">
    <img class="" src="img/developments/@($"{NamedPath.DevelopmentBack(Development.Level).Path}.png")" />
</button>

@code {
    [Parameter]
    public Development Development { get; set; }

    public bool Selected { get; set; }

    [Parameter]
    public EventCallback<Development> OnClicked { get; set; }

    private async Task Click()
    {
        Selected = true;
        await OnClicked.InvokeAsync(Development);
    }
}
