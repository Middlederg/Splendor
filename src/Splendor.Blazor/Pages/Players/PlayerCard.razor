<div class="bg-white justify-center items-center overflow-hidden md:max-w-sm rounded-lg shadow-sm mx-auto">
    <div class="relative h-12 flex justify-between" style="background-color:@(Player.Color.StrongColor.ToHex())">
        <div class="mx-4 my-2 hidden sm:block lg:hidden shadow h-8 w-8 border-white rounded-full overflow-hidden border-4"
             style="background-color:@(Player.Color.SoftColor.ToHex())">
            <img class="object-cover w-full h-full" src="img/characters/@($"{Player.Avatar.Path}.png")">
        </div>

        <NoblesTotal Total="3" />

        <div class="hidden lg:flex">
            <GemsTotal Total="5" />
        </div>

        <span class="lg:hidden mx-4 px-4 py-3 small text-white font-mono"
              style="background-image: url(img/shield.svg);background-position: center;background-repeat: no-repeat;background-size: cover;">
            @Player.Prestige.ToString()
        </span>

    </div>
    <div class="hidden lg:block relative shadow mx-auto h-24 w-24 -mt-10 -mb-12 border-white rounded-full overflow-hidden border-4" style="background-color:@(Player.Color.SoftColor.ToHex())">
        <img class="object-cover w-full h-full" src="img/characters/@($"{Player.Avatar.Path}.png")">
    </div>
    <div class="hidden lg:block">
        <h1 class="mx-4 text-lg font-semibold">
            @Player.ToString()

            <span class="px-3 py-1 float-right small text-white font-mono"
                  style="background-image: url(img/shield.svg);background-position: center;background-repeat: no-repeat;background-size: cover;">
                @Player.Prestige.ToString()
            </span>

        </h1>
    </div>

    <div class="hidden lg:flex justify-center mt-6">
        @foreach (var gem in Gems.GetAllGems())
        {
            <DevelopmentCounter Developments="@Player.GetDevelopmentsOfType(gem)" />
        }
        <ReservedDevelopments Total="1" />
    </div>

    <div class="hidden lg:flex justify-center mt-2">
        @foreach (var gem in Gems.GetAllGemsWithGold())
        {
            <GemCounter Gems="@Player.GemsOfType(gem)" />
        }
    </div>

